<div class="patient-data-container">
    <table id="patient-data-table">

        <tr class="patient-data-header">
            <th>Date</th>
            <th>Time</th>
            {{#if (eqBcg type)}}
                <th>BCG (nmol/L)</th>
            {{/if}}
            {{#if (eqWeight type)}}
                <th>Weight (kg)</th>
            {{/if}}
            {{#if (eqInsulin type)}}
                <th>Insulin (doses)</th>
            {{/if}}
            {{#if (eqExercise type)}}
                <th>Exercise (steps)</th>
            {{/if}}
            <th>Comments</th>
        </tr>
       
        {{#each measurement}}
        <tr class="patient-data-row">
            {{#if this.value}}
                <td>{{formatDate this.date}}</td>
                <td>{{formatTime this.date}} </td>
                <td>{{this.value}}</td>
                {{#if (isEmptyStr this.comment)}}
                    <td> - </td>
                {{else}}
                    <td>{{this.comment}}</td>
                {{/if}}
            {{else}}
                <td>{{formatDate this.date}}</td>
                <td> - </td>
                <td> - </td>
                <td> - </td>
            {{/if}}
        </tr>
        {{/each}}
    </table>
</div>