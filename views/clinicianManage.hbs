
{{#if loggedIn}}
{{> flashSuccess}}


{{>patientDrilldown}}
<table class="clinician-table-styled" style:"align=center"> 
    <thead>
        <tr>
            <th></th>
            <th>Record</th>
            <th>minimum</th>
            <th>maximum</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th><input type="checkbox" checked="checked"></th>
            <th>Blood Glucose Level</th>
            <th><form>
                <input type="number" id="minbcg" name="minbcg" value="{{patient.measurements.bcg.minimum}}" >
            </form></th>
            <th><form>
                <input type="number" id="maxbcg" name="maxbcg" value="{{patient.measurements.bcg.maximum}}">
            </form></th>
        </tr>
        <tr>
            <th><input type="checkbox"></th>
            <th>Weight</th>
            <th><form>
                <input type="number" id="minweight" name="minweight" value="{{patient.measurements.weight.minimum}}">
            </form></th>
            <th><form>
                <input type="number" id="maxweight" name="maxweight" value="{{patient.measurements.weight.maximum}}">
            </form></th>
        </tr>
         <tr>
            <th><input type="checkbox"></th>
            <th>Doses of Insulin</th>
            <th><form>
                <input type="number" id="mindose" name="mindose" value="{{patient.measurements.insulin.minimum}}">
            </form></th>
            <th><form>
                <input type="number" id="maxdose" name="maxdose" value="{{patient.measurements.insulin.maximum}}">
            </form></th>
        </tr>
        <tr>
            <th><input type="checkbox"></th>
            <th>Steps</th>
            <th><form>
                <input type="number" id="minsteps" name="minsteps" value="{{patient.measurements.exercise.minimum}}">
            </form></th>
            <th><form>
                <input type="number" id="maxsteps" name="maxsteps"value="{{patient.measurements.exercise.maximum}}">
            </form></th>
        </tr>

    </tbody>
</table>

<button><a href="/clinician/manage-patient/{{this.patient._id}}" Style="color:white;">Save</a></button>



{{else}}

{{> loggedOut}}

{{/if}}